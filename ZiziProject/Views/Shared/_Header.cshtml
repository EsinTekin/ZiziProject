@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/Home">ZiziArt&Craft</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index">Anasayfa <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Hikayemiz">Hikayemiz</a>
                </li>
                @*<li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Eserler</a>
            </li>*@
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Eserler">Eserler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                </li>
            </ul>
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a>@User.Identity.Name</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-item" asp-action="Logout" asp-controller="Account">Çıkış</a>
                </li>

            }
            else
            {
                <li class="nav-item">
                    <a class="nav-item" asp-action="Login" asp-controller="Account">Giriş</a>
                </li>

                <li class="nav-item">
                    <a class="nav-item" asp-action="Register" asp-controller="Account">Kaydol</a>
                </li>


            }
            <form class="form-inline mt-2 mt-md-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Ara</button>
            </form>
        </div>
    </nav>
</header>