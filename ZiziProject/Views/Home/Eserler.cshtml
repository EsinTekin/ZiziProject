@using ZiziProject.Models
@model IEnumerable<Post>
@*// View içerisine geçirdiğimiz nesnenin tipi
    // Model adıyla birlikte View'e geçirdiğimiz nesneye erişiyoruz
    // Model liste tipli bir değişken olduğu için tek tek içerisindeki değerleri alıyoruz*@

@foreach (var item in Model)
{
    <div class="blog-post">
        <img src="~/image/blue2.jpeg" class="blog-post-title" width="300" height="300" />
        <h2 class="blog-post-title">@item.title </h2>
        <p class="blog-post-meta">Tarih <a href="#">Kullanıcı</a></p>
        <h3>@item.content</h3>
    </div><!-- /.blog-post -->

    <div class="blog-post">
        <img src="~/image/newyear1.jpeg" class="blog-post-title" width="300" height="300" />
        <h2 class="blog-post-title">@item.title </h2>
        <p class="blog-post-meta">Tarih <a href="#">Kullanıcı</a></p>
        <h3>@item.content</h3>
    </div><!-- /.blog-post -->
    <div class="blog-post">
        <img src="~/image/agac2.jpeg" class="blog-post-title" width="300" height="300" />
        <h2 class="blog-post-title">@item.title </h2>
        <p class="blog-post-meta">Tarih <a href="#">Kullanıcı</a></p>
        <h3>@item.content</h3>
    </div><!-- /.blog-post -->

}

@*// HomeController içerisinde tanımladığımız ViewData nesnesini
    // Cast ederek değişkene atıyor ardından bir alt satırda kullanıyoruz*@

@{
    var data = (Post)ViewData["secilenNesne"];
}
<h2>Seçilen Nesne Başlığı @data.title </h2>
<h2>Seçilen Nesne Başlığı: @data.content </h2>